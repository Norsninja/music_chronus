# Music Chronus - Windows Environment Configuration
# Created: 2025-09-05
# Purpose: Baseline configuration for Windows native implementation

# Audio Configuration
CHRONUS_SAMPLE_RATE=48000          # WASAPI standard
CHRONUS_BUFFER_SIZE=512            # 10.6ms at 48kHz (match AudioRing)
CHRONUS_OUTPUT_DEVICE=17           # AB13X USB Audio (WASAPI)
CHRONUS_USE_WASAPI=1               # Enable WASAPI exclusive mode
CHRONUS_CHANNELS=1                 # Mono for now

# Process Configuration
CHRONUS_START_METHOD=spawn         # Windows requirement
CHRONUS_POOL_SIZE=4                # Module sandbox workers
CHRONUS_MODULE_TIMEOUT=1000        # Build timeout (ms)
CHRONUS_MAXTASKS_PER_CHILD=500    # Balance memory vs respawn

# Router Configuration
CHRONUS_ROUTER=1                   # Enable router mode in standby
CHRONUS_PREFILL_BUFFERS=3          # Pre-fill depth for Windows
CHRONUS_LEAD_TARGET=2              # Ring buffer lead
CHRONUS_MAX_CATCHUP=2              # Catchup limit
CHRONUS_EARLY_MARGIN_MS=2          # Timing margin
CHRONUS_KEEP_AFTER_READ=2          # Buffer retention

# OSC Configuration
CHRONUS_OSC_HOST=127.0.0.1
CHRONUS_OSC_PORT=5005

# Debug/Development
CHRONUS_DEBUG=0                    # Set to 1 for verbose logging
CHRONUS_METRICS=1                  # Enable performance metrics
CHRONUS_TEST_MODE=0                # Set to 1 for testing

# Windows Performance
CHRONUS_HIGH_PRIORITY=1            # Set process to high priority
CHRONUS_MMCSS=1                    # Register with Windows MMCSS